{
  "rules": {
    "devices": {
      ".read": true,
      ".write": true,
      "$deviceId": {
        ".read": true,
        ".write": true,
        "current": {
          ".read": true,
          ".write": true
        },
        "history": {
          "$timestamp": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "emotional_states": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true,
        "current": {
          ".read": true,
          ".write": true
        },
        "history": {
          "$timestamp": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "baselines": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "alerts": {
      ".read": true,
      ".write": false
    },
    "test": {
      ".read": true,
      ".write": true
    }
  }
}

